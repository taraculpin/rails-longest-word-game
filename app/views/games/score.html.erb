<h1>Your score</h1>

<% if @included %>
  <% if (@english_word && @word.length > 1) || @word == "A" || @word == "I"%>
    <p>Congratulations! Your score is <%= @word.length %></p>
      <% session[:score] += @word.length %>
  <% else %>
    <p><%= @word %> is not a word</p>
    <p>Your score is 0</p>
  <% end %>
<% else %>
  <p>This word can't be made from the grid</p>
  <p>Your score is 0</p>
<% end %>

Running score = <%= session[:score] %>

<%= link_to "Play again", new_path %>
